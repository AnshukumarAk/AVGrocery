<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/modal_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/explore_shows_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_language"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:id="@+id/language_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Example language button -->
        <TextView
            android:id="@+id/done"
            android:background="@drawable/text_curve"
            android:gravity="center"
            android:minWidth="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="visible"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="हिंदी"
            android:textColor="#FF0000"
            android:textSize="16sp" />

        <TextView
            android:background="@drawable/text_curve"
            android:gravity="center"
            android:minWidth="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="visible"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="தமிழ்"
            android:textColor="#FFD700"
            android:textSize="16sp" />

        <TextView
            android:background="@drawable/text_curve"
            android:gravity="center"
            android:minWidth="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="visible"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="मराठी"
            android:textColor="#00BFFF"
            android:textSize="16sp" />



        <!-- Example language button -->
        <TextView
            android:background="@drawable/text_curve"
            android:gravity="center"
            android:minWidth="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="বাংলা"
            android:textColor="#FF69B4 "
            android:textSize="16sp" />

        <TextView
            android:background="@drawable/text_curve"
            android:gravity="center"
            android:minWidth="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="visible"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="తెలుగు"
            android:textColor="#DDA0DD"
            android:textSize="16sp" />

        <TextView
            android:background="@drawable/text_curve"
            android:gravity="center"
            android:minWidth="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="visible"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="ಕನ್ನಡ"
            android:textColor="#008000"
            android:textSize="16sp" />


        <TextView
            android:background="@drawable/text_curve"
            android:gravity="center"
            android:minWidth="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="visible"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="മലയാളം"
            android:textColor="#FF4500"
            android:textSize="16sp" />


        <TextView
            android:background="@drawable/text_curve"
            android:gravity="center"
            android:minWidth="100dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="visible"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="English"
            android:textColor="#32CD32"
            android:textSize="16sp" />

        <!-- Add other language buttons similarly -->

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:textAlignment="center"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:textSize="18sp"
           android:layout_weight="1"
           android:text="Cancel"/>

<!--        <View-->
<!--            android:layout_width="16dp"-->
<!--            android:layout_height="wrap_content" />-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/text_curve"
            android:backgroundTint="#008000"
            android:layout_weight="1"
            android:text="Save Changes"/>

    </LinearLayout>


</LinearLayout>
